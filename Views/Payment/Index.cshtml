@model IEnumerable<SchoolRecognition.Models.SchoolPaymentsDto>

@{
    ViewBag.Title = "List of Payment";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}


<style>
    #xdatatable_filter {
        float: right !important;
    }
</style>




<section class="content">


    <div class="row">
        <div class="col-12">
            <!-- /.card -->
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title text-bold text-danger">@ViewData["Title"]</h3>
                </div>
                <div class="card-body">
                  
                    <div class="col-12">
                        <div class="table-responsive" style="padding:7px;">
                            <table class="table table-striped table-bordered display" id="xdatatable">
                                <thead>
                                    <tr>
                                        <th>
                                            School Name
                                        </th>
                                        <th>
                                            Amount
                                        </th>
                                        <th>
                                            EmailAddress
                                        </th>

                                        <th>
                                            ReceiptImage
                                        </th>

                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @{
                                        var counter = 1;
                                    }
                                        @foreach (var item in Model)
                                        {
                                            <tr>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.School.Name)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.Amount)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.School.EmailAddress)
                                                </td>
                                                <td>
                                                  
                                                        <img src="@item.DisplayImage" style="width:50px;height:50px;" alt="Alternate Text" />
                                                    
                                                </td>


                                                <td>
                                                    @Html.ActionLink("Edit", "Edit", new { @id = item.Id, @class = "btn btn-primary btn-sm" }) |

                                                    @Html.ActionLink("Delete", "Delete", new { /* id=item.PrimaryKey */ })
                                                </td>
                                            </tr>
                                            counter++;
                                        }
                                    </tbody>


                            </table>
                        </div>
                    </div>
                  
                
                
                </div>
            </div>
        </div>
        <!-- /.col -->
    </div>



</section>






<link href="~/css/dataTables.bootstrap.min.css" rel="stylesheet" />
@*<link href="~/Content/dataTables.bootstrap.min.css" rel="stylesheet" />*@
<script type="text/javascript">

    $(document).ready(function () {
        $('#xdatatable').dataTable({
            "iDisplayLength": 6,
            "lengthMenu": [2, 5, 10, 25, 50, 100],
            dom: 'lBfrtip'
        });
    })


</script>
