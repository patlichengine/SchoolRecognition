@model RecognitionTypesCreateDto
@{
    ViewData["Title"] = "New Recognition Type";
}
@section styles{

    @*<link href="~/lib/jquery-ui/jquery-ui.min.css" rel="stylesheet" />
        <link href="~/lib/jquery-ui/jquery-ui.structure.min.css" rel="stylesheet" />*@
    @*<link href="~/lib/select2/dist/css/select2.min.css" rel="stylesheet" />*@

}


<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>@ViewData["Title"]</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a asp-area="" asp-controller="Home" asp-action="Index">Dashboard</a></li>
                    <li class="breadcrumb-item"><a asp-area="" asp-controller="RecognitionTypes" asp-action="Index">Manage Pins</a></li>
                    <li class="breadcrumb-item active">@ViewData["Title"]</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<!-- Main content -->
<section class="content">


    <div class="row">
        <div class="col-12">
            <!-- /.card -->
            @Vereyon.Web.FlashMessageHtmlHelper.RenderFlashMessages(Html)

            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">Add New Recognition Type</h3>
                </div>
                <div class="card-body">

                    <small class="text-muted mt-1 mb-2">All fields marked <b class="text-dark">*</b> are required!</small>

                    <form asp-action="Create" method="post">

                        @Html.AntiForgeryToken()

                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>



                        <div class="form-group">
                            <label asp-for="RecognitionTypeName">*Recognition Type:</label>
                            <input minlength="5" maxlength="60" asp-for="RecognitionTypeName" class="form-control" placeholder="Enter Recognition Type" required>
                        </div>

                        <div class="form-group">
                            <label asp-for="RecognitionTypeCode">*Code:</label>
                            <input minlength="1" maxlength="2" asp-for="RecognitionTypeCode" class="form-control" placeholder="Enter Code" required>
                        </div>




                        <!-- /.col -->
                        <button type="submit" class="btn btn-primary btn-lg">
                            <i class="fa fa-spinner fa-spin" id="loading_icon" style="display:none"></i>
                            Submit
                        </button>
                        <button type="reset" class="btn btn-secondary btn-lg"> Reset</button>

                        <!-- /.col -->

                    </form>


                </div>
                <!-- /.card-body -->
            </div>
            <!-- /.card -->
        </div>
        <!-- /.col -->
    </div>



</section>
<!-- /.content -->

@section scripts{
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="~/js/loading_icon.js"></script>
    
    <script>
        // add the rule here
        //$.validator.addMethod("valueNotEquals", function (value, element, arg) {
        //    return arg !== value;
        //}, "Select a valid value!");
        $("form").validate({
            rules: {
                RecognitionTypeName: {
                    required: true,
                    minlength: 5,
                    maxlength: 60
                },
                RecognitionTypeCode: {
                    required: true,
                    minlength: 1,
                    maxlength: 2
                },

            },
            messages: {
                RecognitionTypeName: {
                    required: "This field is required!",
                    minlength: "This field must have at least 5 characters!",
                    maxlength: "This field must have less than 60 characters!",
                },
                RecognitionTypeCode: {
                    required: "This field is required!",
                    minlength: "This field must have at least 1 characters!",
                    maxlength: "This field must have less than 2 characters!",
                }
            }
        });
    </script>

}
<script type="text/javascript" src="~/js/linkClick.js"></script>


