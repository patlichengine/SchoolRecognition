
@{
    ViewData["Title"] = "School Profile";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

@model SchoolRecognition.Models.SchoolsDto

    <section class="content">


        <div class="row">
            <div class="col-12">
                <!-- /.card -->
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title text-bold text-danger">@ViewData["Title"] </h3>
                     
                    </div>
                    <div class="card-header">
                        <h3 class="text-bold text-danger">@TempData["SchoolName"] </h3>
                       
                    </div>

                    <div class="card-body">
                        <div class="col-8">
                            <form enctype="multipart/form-data" asp-action="">



                                <div class="col-md-10">
                                    <div class="form-group">
                                        <label asp-for="Address" class="control-label"></label>
                                        <input asp-for="Address" id="schoolnameid" placeholder="Address" value="" class="form-control" />
                                        <span asp-validation-for="Address" class="text-danger"></span>
                                    </div>
                                </div>

                                <div class="col-md-10">
                                    <div class="form-group">
                                        <label asp-for="PhoneNo" class="control-label"></label>
                                        <input asp-for="PhoneNo" id="phoneid" placeholder="Phone No" value="" class="form-control" />
                                        <span asp-validation-for="PhoneNo" class="text-danger"></span>
                                    </div>
                                </div>

                               

                                <div class="col-md-8 col-sm-8">
                                    <strong>Year of establishment</strong>
                                    <strong style="color:red">*</strong>
                                    <div class="">
                                        @Html.DropDownListFor(model => model.YearEstablished, ViewBag.AvailableYears as SelectList, "(select Year)",
                          new Dictionary<string, object> { { "class", "form-control" } })
                                        @Html.ValidationMessageFor(model => model.YearEstablished)
                                        <span class="tooltip tooltip-top-right">Select the Year Established</span>
                                    </div>
                                </div>

