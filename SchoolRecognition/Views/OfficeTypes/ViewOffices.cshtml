@model PagedList<OfficesViewDto>
@{
    var officeType = (OfficeTypeViewPagedListOfficesDto)ViewData["OfficeType"];
    var pages = (IEnumerable<int>)ViewData["Pages"];
    ViewData["Title"] = officeType.TypeDescription;
    //Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}


<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>@ViewData["Title"]</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a asp-area="" asp-controller="Home" asp-action="Index" data-toggle="link">Dashboard</a></li>
                    <li class="breadcrumb-item"><a asp-area="" asp-controller="OfficeTypes" asp-action="Index" data-toggle="link">Manage Offices</a></li>
                    <li class="breadcrumb-item active">Types of Offices</a></li>
                    <li class="breadcrumb-item active">@ViewData["Title"]</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<!-- Main content -->
<section class="content">


    <div class="row">
        <div class="col-12">
            <!-- /.card -->
            @Vereyon.Web.FlashMessageHtmlHelper.RenderFlashMessages(Html)

            <div class="card card-primary card-outline card-outline-tabs">
                <div class="card-header p-0 border-bottom-0">
                    <ul class="nav nav-tabs" id="custom-tabs-three-tab" role="tablist">
                        <li class="nav-item">
                            <a class="nav-link active disabled" id="custom-tabs-three-home-tab" data-toggle="pill" role="tab" aria-controls="custom-tabs-three-home" aria-selected="true">
                                <b>@ViewData["Title"]</b>
                            </a>
                        </li>
                    </ul>
                </div>
                <div class="card-body">
                    <div class="tab-content" id="custom-tabs-three-tabContent">
                        <div class="tab-pane fade active show" id="custom-tabs-three-home" role="tabpanel" aria-labelledby="custom-tabs-three-home-tab">

                            <div class="clearfix mb-3">
                                <div class="float-right">

                                    <a asp-area="" asp-controller="OfficeStates" asp-action="Index" data-toggle="link" class="btn btn-light">
                                        <i class="fas fa-exchange-alt"></i>
                                        Assign Offices To States
                                    </a>

                                    <a asp-area="" asp-action="CreateOffice" asp-route-id="@officeType.Id" data-toggle="link" class="btn btn-light">
                                        <i class="fas fa-plus"></i>
                                        New Office
                                    </a>

                                </div>
                            </div>


                            <div class="row mb-2">
                                <div class="col">
                                    <h4 style="font-weight:100">Offices</h4>
                                </div>
                                <div class="col-8">

                                    <form asp-action="ViewOffices" asp-route-id="@officeType.Id" method="get" class="md-form mb-3" id="searchForm">

                                        <div class="input-group">
                                            <input type="text" min-length="2" name="searchQuery" class="form-control" value="@ViewData["SearchQuery"]" placeholder="Enter Search words..." aria-label="Username" aria-describedby="material-addon1">
                                            @*<div class="input-group-prepend">
                                                    <span class="input-group-text md-addon" id="material-addon1">
                                                        <i class="fas fa-search"></i>
                                                    </span>
                                                </div>*@
                                            <div class="input-group-prepend">
                                                <button class="btn btn-md btn-light" type="submit">
                                                    <i class="fas fa-search"></i>
                                                    Search
                                                </button>
                                            </div>
                                        </div>



                                    </form>

                                </div>

                                <div class="col-md-12 mb-1 ">


                                    <a href="@Url.Action("ViewOffices", "OfficeTypes", new { id  = officeType.Id , orderBy = "office_name", searchQuery = ViewData["SearchQuery"],  pageNumber = Model.CurrentPage,  data_toggle="link" })" class="btn btn-light btn-xs">
                                        Name Ascending
                                        <i class="fas fa-sort-up"></i>
                                    </a>

                                    <a href="@Url.Action("ViewOffices", "OfficeTypes", new { id  = officeType.Id , orderBy = "office_name_desc", searchQuery = ViewData["SearchQuery"],  pageNumber = Model.CurrentPage,  data_toggle="link"})" class="btn btn-light btn-xs">
                                        Name Descending
                                        <i class="fas fa-sort-down"></i>
                                    </a>

                                </div>
                            </div>

                            <table class="table table-bordered table-striped dataTable" role="grid" aria-describedby="example1_info">

                                <thead>
                                    <tr role="row">
                                        <td>Year Est.</td>
                                        <td>Name</td>
                                        <td>State Located</td>
                                        <td>Address</td>
                                        <td></td>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr role="row">
                                            <td>@(item.DateCreated != null ? item.DateCreated.Value.ToString("d-MMM-yyyy") : "NOT STATED")</td>
                                            <td>@item.OfficeName</td>
                                            <td>@item.StateName</td>
                                            <td>@item.OfficeAddress</td>

                                            <td class="text-center p-1">
                                                <span data-toggle="tooltip" data-placement="top" title="Details">
                                                    <a asp-action="Details" asp-controller="Offices" asp-route-id="@item.Id" class="btn btn-light btn-sm " data-toggle="link">
                                                        <i class="fas fa-desktop"></i>
                                                        @*View Offices*@
                                                    </a>
                                                </span>
                                                <span data-toggle="tooltip" data-placement="top" title="Update">
                                                    <a asp-action="Update" asp-controller="Offices" asp-route-id="@item.Id " class="btn btn-light btn-sm" data-toggle="link">
                                                        <i class="fas fa-edit"></i>
                                                        @*Generate Offices*@
                                                    </a>
                                                </span>
                                                <span data-toggle="tooltip" data-placement="top" title="Delete">

                                                    <a asp-action="Delete" asp-controller="Offices" asp-route-id="@item.Id " class="btn btn-danger btn-sm" data-toggle="link">
                                                        <i class="fas fa-trash"></i>
                                                        @*Generate Offices*@
                                                    </a>
                                                </span>

                                            </td>
                                        </tr>
                                    }
                                    @if (Model.TotalCount < 1)
                                    {
                                        <tr>
                                            <td class="text-center" colspan="6">
                                                No data available in table
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>


                            @{
                                var prevDisabled = Model.HasPrevious ? "" : "disabled";
                                var nextDisabled = Model.HasNext ? "" : "disabled";
                                //var disableAll =
                            }
                            @if (Model.TotalCount > 0)
                            {
                                int range = Model.PageSize > Model.TotalCount ? Model.TotalCount : Model.PageSize;
                                <div class="row mt-2">
                                    <div class="col">
                                        @String.Format("Showing {0} to {1} of {2} ", (((Model.CurrentPage - 1) * range) + 1), (Model.CurrentPage * range), Model.TotalCount)
                                    </div>
                                    <div class="col-8">


                                        <partial name="_paginationLinks" model='new PaginationLinksDto {
                                 Pages = pages, PageNumber = Model.CurrentPage, PrevDisabled = prevDisabled,
                                 NextDisabled = nextDisabled, Controller = "Offices", Action="ViewOffices", Id=officeType.Id, CurrentPage = Model.CurrentPage,
                                 TotalPages = Model.TotalPages }'>

                                    </div>
                                </div>
                            }

                        </div>
                    </div>
                </div>
                <!-- /.card -->
            </div>
            <!-- /.card -->
        </div>
        <!-- /.col -->
    </div>



</section>
<!-- /.content -->

<script src="~/js/ajaxFormGET.js"></script>
<script src="~/js/linkClick.js"></script>