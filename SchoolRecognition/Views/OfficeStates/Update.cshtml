@model OfficeStatesCreateDto
@{

    var states = (IEnumerable<SelectListItem>)ViewData["States"];
    ViewData["Title"] = "Reassign Office";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
@section styles{

    @*<link href="~/lib/jquery-ui/jquery-ui.min.css" rel="stylesheet" />
        <link href="~/lib/jquery-ui/jquery-ui.structure.min.css" rel="stylesheet" />*@
    <link href="~/lib/select2/dist/css/select2.min.css" rel="stylesheet" />
    <link href="~/lib/select2-bootstrap4-theme/select2-bootstrap4.min.css" rel="stylesheet" />

}



<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>@ViewData["Title"]</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a asp-area="" asp-controller="Home" asp-action="Index">Dashboard</a></li>
                    <li class="breadcrumb-item"><a asp-area="" asp-controller="OfficeTypes" asp-action="Index">Manage Offices</a></li>
                    <li class="breadcrumb-item"><a asp-area="" asp-controller="Offices" asp-action="Details" asp-route-id="@Model.OfficeId">@Model.OfficeName</a></li>
                    <li class="breadcrumb-item active">@ViewData["Title"]</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<!-- Main content -->
<section class="content">


    <div class="row">
        <div class="col-12">
            <!-- /.card -->
            @Vereyon.Web.FlashMessageHtmlHelper.RenderFlashMessages(Html)

            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">Reassign Office to State</h3>
                </div>
                <div class="card-body">

                    <small class="text-muted mt-1 mb-2">All fields marked <b class="text-dark">*</b> are required!</small>

                    <form asp-action="Update" method="post">

                        @Html.AntiForgeryToken()

                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <input type="hidden" asp-for="Id" />

                        <div class="form-group">
                            <label asp-for="OfficeName">*Office Name:</label>
                            <input asp-for="OfficeName" class="form-control" placeholder="Enter Recognition Type" readonly>
                        </div>

                        <div class="form-group">
                            <label asp-for="OfficeAddress">*Office Address:</label>
                            <input asp-for="OfficeAddress" class="form-control" placeholder="Enter Code" readonly>
                        </div>

                        <div class="form-group">
                            <label asp-for="StateId">*State Assigned</label>
                            <select asp-for="StateId" asp-items="@states.ToList()" class="form-control" required>
                                <option value="">--Select State---</option>
                            </select>
                            <span asp-validation-for="StateId" class="text-danger"></span>
                        </div>


                        <!-- /.col -->
                        <button type="submit" class="btn btn-primary btn-lg">
                            <i class="fa fa-spinner fa-spin" id="loading_icon" style="display:none"></i>
                            Reassign
                        </button>
                        <button type="reset" class="btn btn-secondary btn-lg"> Reset</button>

                        <!-- /.col -->

                    </form>


                </div>
                <!-- /.card-body -->
            </div>
            <!-- /.card -->
        </div>
        <!-- /.col -->
    </div>



</section>
<!-- /.content -->

@section scripts{
    <script src="~/js/loading_icon.js"></script>
    <script src="~/lib/jquery-ui/jquery-ui.min.js"></script>
    @*<script src="~/lib/select2/dist/js/select2.min.js"></script>*@
    <script src="~/lib/select2/dist/js/select2.full.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation/dist/additional-methods.min.js"></script>
    <script>
        $(document).ready(function () {
            $('select.form-control').select2({
                theme: 'bootstrap4'
            });
            //$('.select2me').select2();
        });
    </script>
    <script>
        // add the rule here
        //$.validator.addMethod("valueNotEquals", function (value, element, arg) {
        //    return arg !== value;
        //}, "Select a valid value!");
        $.validator.addMethod("valueNotEquals", function (value, element, arg) {
            return arg !== value;
        }, "Select a valid value!");
        $("form").validate({
            rules: {
                StateId: {
                    required: true,
                    valueNotEquals: ""
                    //min: 1
                },
            },
            messages: {
                StateId: {
                    required: "This field is required!",
                    valueNotEquals: "Select a valid value!"
                },
            }
        });
    </script>

}


