@model PagedList<OfficeStatesViewDto>
@{
    var pages = (IEnumerable<int>)ViewData["Pages"];
    ViewData["Title"] = "States Assigned to Offices";
    //Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}


<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>@ViewData["Title"]</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a asp-area="" asp-controller="Home" asp-action="Index" data-toggle="link">Dashboard</a></li>
                    <li class="breadcrumb-item"><a asp-area="" asp-controller="OfficeTypes" asp-action="Index" data-toggle="link">Manage Offices</a></li>
                    <li class="breadcrumb-item active">@ViewData["Title"]</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<!-- Main content -->
<section class="content">


    <div class="row">
        <div class="col-12">
            <!-- /.card -->
            @Vereyon.Web.FlashMessageHtmlHelper.RenderFlashMessages(Html)

            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">List of States Assigned to Offices</h3>
                </div>
                <!-- /.card-header -->
                <div class="card-body">


                    <div class="card-body clearfix">
                        <div class="float-right">


                            <a asp-area="" asp-controller="OfficeStates" asp-action="CreateMultiple" data-toggle="link" class="btn btn-light">
                                <i class="fas fa-exchange-alt"></i>
                                Assign States To an Office
                            </a>

                            <a asp-area="" asp-controller="OfficeLocalGovernments" asp-action="CreateMultiple" data-toggle="link" class="btn btn-light">
                                <i class="fas fa-exchange-alt"></i>
                                Assign LGAs to an Office
                            </a>

                        </div>
                    </div>

                    <div class="row mb-2">
                        <div class="col">
                        </div>
                        <div class="col-8">

                            <form asp-action="Index" method="get" class="md-form mb-3" id="searchForm">

                                <div class="input-group">
                                    <input type="text" min-length="2" name="searchQuery" class="form-control" value="@ViewData["SearchQuery"]" placeholder="Enter Search words..." aria-label="Username" aria-describedby="material-addon1">
                                    @*<div class="input-group-prepend">
                                            <span class="input-group-text md-addon" id="material-addon1">
                                                <i class="fas fa-search"></i>
                                            </span>
                                        </div>*@
                                    <div class="input-group-prepend">
                                        <button class="btn btn-md btn-light" type="submit">
                                            <i class="fas fa-search"></i>
                                            Search
                                        </button>
                                    </div>
                                </div>



                            </form>

                        </div>

                    </div>

                    <table class="table table-bordered table-striped dataTable" role="grid" aria-describedby="example1_info">

                        <thead>
                            <tr role="row">
                                <td>State Code</td>
                                <td>State Name</td>
                                <td>Office Assigned To</td>
                                <td>Office Type</td>
                                <td></td>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr role="row">
                                    <td>@item.StateCode</td>
                                    <td>@item.StateName</td>
                                    <td>@item.OfficeName</td>
                                    <td>@item.OfficeTypeDescription</td>
                                    <td class="text-center p-1">

                                        <a asp-action="Delete" asp-controller="OfficeStates" asp-route-id="@item.Id" data-toggle="link" class="btn btn-danger btn-sm" data-toggle="tooltip" data-placement="top" title="Delete">
                                            <i class="fas fa-trash"></i>
                                            @*Generate OfficeStates*@
                                        </a>
                                    </td>
                                </tr>
                            }
                            @if (Model.TotalCount < 1)
                            {
                                <tr>
                                    <td class="text-center" colspan="5">
                                        No data available in table
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>


                    @{
                        var prevDisabled = Model.HasPrevious ? "" : "disabled";
                        var nextDisabled = Model.HasNext ? "" : "disabled";
                        //var disableAll =
                    }
                    @if (Model.TotalCount > 0)
                    {
                        int range = Model.PageSize > Model.TotalCount ? Model.TotalCount : Model.PageSize;
                        <div class="row mt-2">
                            <div class="col">
                                @String.Format("Showing {0} to {1} of {2} ", (((Model.CurrentPage - 1) * range) + 1), (Model.CurrentPage * range), Model.TotalCount)
                            </div>
                            <div class="col-8">


                                <partial name="_paginationLinks" model='new PaginationLinksDto {
                                 Pages = pages, PageNumber = Model.CurrentPage, PrevDisabled = prevDisabled,
                                 NextDisabled = nextDisabled, Controller = "OfficeStates", CurrentPage = Model.CurrentPage,
                                 TotalPages = Model.TotalPages }'>

                            </div>
                        </div>
                    }


                </div>
                <!-- /.card-body -->
            </div>
            <!-- /.card -->
        </div>
        <!-- /.col -->
    </div>



</section>
<!-- /.content -->


<script src="~/js/ajaxFormGET.js"></script>
<script src="~/js/linkClick.js"></script>