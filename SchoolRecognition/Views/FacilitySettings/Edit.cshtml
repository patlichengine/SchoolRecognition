
@model FacilitySettingsDto

@{
    ViewData["Title"] = "Update Facility Settings";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<!-- Content Header (Page header) -->
@*@section styles{
    }*@

<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>@ViewData["Title"]</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a asp-area="" asp-controller="Home" asp-action="Index">Dashboard</a></li>
                    <li class="breadcrumb-item"><a asp-area="" asp-controller="FacilityTypes" asp-action="Index">Manage School Facilities</a></li>
                    <li class="breadcrumb-item active">@ViewData["Title"]</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>



<!-- Main content -->
<section class="content">


    <div class="row">
        <div class="col-12">
            <!-- /.card -->
            @Vereyon.Web.FlashMessageHtmlHelper.RenderFlashMessages(Html)

            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">Update Facility Type</h3>
                </div>
                <div class="card-body">

                    <small class="text-muted mt-1 mb-2">All fields marked <b class="text-danger">*</b> are required!</small>

                    <form asp-action="Edit" method="post">

                        @Html.AntiForgeryToken()

                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="Id" />



                        <div class="row">

                            <div class="col-md-6">

                                @*<div class="form-group">
                                    <label>Select Facility Item Type</label>
                                    <select class="form-control select2" style="width: 100%;" asp-for="FacilityItemSettingsId" asp-items="@(new SelectList(@ViewBag.facItemList,"Id", "Description"))">
                                        <option value="0"> --- Select Facility Item Type --- </option>



                                    </select>
                                </div>*@
                            </div>
                            <div class="col-md-6">

                                <div class="form-group">
                                    <label asp-for="ItemNo">*Item No:</label>
                                    <input minlength="2" maxlength="50" asp-for="ItemNo" class="form-control" placeholder="Enter Facility Item No" required>
                                </div>

                            </div>
                        </div>

                        <div class="row">

                            <div class="col-md-6">

                                <div class="form-group">
                                    <label asp-for="Specification">*Specification:</label>
                                    <input minlength="2" maxlength="50" asp-for="Specification" class="form-control" placeholder="Enter Specifications" required>
                                </div>

                            </div>
                            <div class="col-md-6">

                                <div class="form-group">
                                    <label asp-for="Quantity">*Quantity:</label>
                                    <input minlength="2" maxlength="50" asp-for="Quantity" class="form-control" placeholder="Enter Number of Quantity" required>
                                </div>

                            </div>
                        </div>

                        <div class="form-row">
                            <div class="form-group col-md-6">
                                <label>Select Facility Type</label>
                                <select class="form-control select2" style="width: 100%;" asp-for="FacilityTypeId" asp-items="@(new SelectList(@ViewBag.facList,"Id", "Title"))">
                                    <option value="0"> --- Select Facility Type --- </option>



                                </select>
                            </div>

                            <div class="form-group col-md-6">
                                <label>Select Facility Type</label>
                                <select id="recids" asp-for="SubjectId"
                                        class="form-control"
                                        asp-items="@(new SelectList(@ViewBag.subjectCode,"Id", "SubjectCode"))">
                                    <option value="0"> --- Select Subject Type --- </option>
                                </select>
                                @*<span class="text-muted">Add Subject Properties</span>*@
                                <span asp-validation-for="SubjectId" class="text-danger"></span>


                            </div>
                        </div>


                        <!-- /.col -->
                        <button type="submit" class="btn btn-primary btn-lg">
                            <i class="fa fa-spinner fa-spin" id="loading_icon" style="display:none"></i>
                            Submit
                        </button>
                        <button type="reset" class="btn btn-secondary btn-lg"> Reset</button>

                        <!-- /.col -->

                    </form>


                </div>
                <!-- /.card-body -->
            </div>
            <!-- /.card -->
        </div>
        <!-- /.col -->
    </div>



</section>
<!-- /.content -->






@section Scripts {


    <script>
        $(document).ready(function () {
            $('select.form-control').select2({
                theme: 'bootstrap4'
            });

        });</script>

    <script>

        $.validator.addMethod("valueNotEquals", function (value, element, arg) {
            return arg !== value;
        }, "Select a valid value!");
        $("form").validate({
            rules: {
                Description: {
                    required: true,
                    minlength: 2,
                    maxlength: 50
                },
                Position: {
                    required: true,
                    minlength: 2,
                    maxlength: 50
                },

                Quantity: {
                    required: true,
                    minlength: 2,
                    maxlength: 50
                },
                Specification: {
                    required: true,
                    minlength: 2,
                    maxlength: 50
                },



            },
            messages: {
                Description: {
                    required: "This field is required!",
                    minlength: "This field must have at least 5 characters!",
                    maxlength: "This field must have less than 50 characters!",
                },
                Position: {
                    required: "This field is required!",
                    minlength: "This field must have at least 5 characters!",
                    maxlength: "This field must have less than 50 characters!",
                },
                Quantity: {
                    required: "This field is required!",
                    minlength: "This field must have at least 5 characters!",
                    maxlength: "This field must have less than 50 characters!",
                },
                Specification: {
                    required: "This field is required!",
                    minlength: "This field must have at least 5 characters!",
                    maxlength: "This field must have less than 50 characters!",
                },

            }
        });
    </script>
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

