
@model FacilitySettingsDto

@{
    ViewData["Title"] = "New Settings";
    //   Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<!-- Content Header (Page header) -->
@section styles{
    <link href="~/css/bootstrap-duallistbox.min.css" rel="stylesheet" />
    <link href="~/css/dual-listbox.min.css" rel="stylesheet" />

}

<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>@ViewData["Title"]</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a asp-area="" asp-controller="Home" asp-action="Index" data-toggle="link">Dashboard</a></li>
                    <li class="breadcrumb-item"><a asp-area="" asp-controller="FacilityTypes" asp-action="Index" data-toggle="link">Manage School Facilities</a></li>
                    <li class="breadcrumb-item active">@ViewData["Title"]</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>



<!-- Main content -->
<section class="content">


    <div class="row">
        <div class="col-12">
            <!-- /.card -->
            @Vereyon.Web.FlashMessageHtmlHelper.RenderFlashMessages(Html)

            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">New Facility Settings</h3>
                </div>
                <div class="card-body">

                    <small class="text-muted mt-1 mb-2">All fields marked <b class="text-danger">*</b> are required!</small>

                    <form asp-action="Create" method="post" asp-controller="FacilitySettings">

                        @Html.AntiForgeryToken()

                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>



                        <div class="row">

                                <div class="col-md-8">
                                    <div class="card">
                                        <div class="card-body">
                                            <label class="card-title card-primary">Facility Type:</label>
                                            <select multiple="multiple" size="10" name="duallistbox_demo1" class="form-control"
                                                    asp-for="FacilityTypeId" asp-items="@(new SelectList(@ViewBag.facilityList,"Id", "Title"))">
                                            </select>
                                            @*<p class="card-text">With supporting text below as a natural lead-in to additional content.</p>
                                            <a href="#" class="btn btn-primary">Go somewhere</a>*@
                                        </div>
                                    </div>
                                </div>
                                

                            <div class="col-md-4">
                                <div class="card">
                                    <div class="card-body">
                                        <label class="card-title card-info">Has Subject?</label>
                                        <p class="card-text">Click to add subject if available.</p>
                                        <a href="#" class="btn btn-primary">Add</a>
                                    </div>
                                </div>
                            </div>

                            
                        </div>

                        @*<div class="row">

                            <div class="col-md-6">

                                <div class="form-group">
                                    <label asp-for="Specification">*Specification:</label>
                                    <input minlength="2" maxlength="50" asp-for="Specification" class="form-control" placeholder="Enter Specifications" required>
                                </div>

                            </div>
                            <div class="col-md-6">

                                <div class="form-group">
                                    <label asp-for="Quantity">*Quantity:</label>
                                    <input minlength="2" maxlength="50" asp-for="Quantity" class="form-control" placeholder="Enter Number of Quantity" required>
                                </div>

                            </div>
                        </div>*@

                       


                        <!-- /.col -->
                        <button type="submit" class="btn btn-primary btn-lg">
                            <i class="fa fa-spinner fa-spin" id="loading_icon" style="display:none"></i>
                            Submit
                        </button>
                        <button type="reset" class="btn btn-secondary btn-lg"> Reset</button>

                        <!-- /.col -->

                    </form>


                </div>
                <!-- /.card-body -->
            </div>
            <!-- /.card -->
        </div>
        <!-- /.col -->
    </div>



</section>
<!-- /.content -->






@section Scripts {

    @*<script src="/js/customScript.js"></script>*@
    <script src="/js/jquery.bootstrap-duallistbox.min.js"></script>
    <script>
        $(document).ready(function () {
            $('select.form-control').select2({
                theme: 'bootstrap4'
            });

        });</script>
    <script>
        var demo1 = $('[name=duallistbox_demo1]').bootstrapDualListbox({
            // default text
            filterTextClear: 'show all',
            filterPlaceHolder: 'Filter',
            moveSelectedLabel: 'Move selected',
            moveAllLabel: 'Move all',
            removeSelectedLabel: 'Remove selected',
            removeAllLabel: 'Remove all',

        });
    </script>
    <script>

        $.validator.addMethod("valueNotEquals", function (value, element, arg) {
            return arg !== value;
        }, "Select a valid value!");
        $("form").validate({
            rules: {

                Position: {
                    required: true,
                    minlength: 1,
                    maxlength: 50
                },

                Quantity: {
                    required: true,
                    minlength: 1,
                    maxlength: 50
                },
                Specification: {
                    required: true,
                    minlength: 2,
                    maxlength: 50
                },



            },
            messages: {

                Position: {
                    required: "This field is required!",
                    minlength: "This field must have at least 1 characters!",
                    maxlength: "This field must have less than 50 characters!",
                },
                Quantity: {
                    required: "This field is required!",
                    minlength: "This field must have at least 1 characters!",
                    maxlength: "This field must have less than 50 characters!",
                },
                Specification: {
                    required: "This field is required!",
                    minlength: "This field must have at least 5 characters!",
                    maxlength: "This field must have less than 50 characters!",
                },

            }
        });
    </script>
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}