@model PagedList<SchoolsViewDto>
@{
    var pages = (IEnumerable<int>)ViewData["Pages"];
    ViewData["Title"] = "Registered Schools";
    //Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}



<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>@ViewData["Title"]</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a asp-area="" asp-controller="Home" asp-action="Index" data-toggle="link">Dashboard</a></li>
                    <li class="breadcrumb-item"><a asp-area="" asp-controller="Schools" asp-action="Index" data-toggle="link">Manage Schools</a></li>
                    <li class="breadcrumb-item active">@ViewData["Title"]</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<!-- Main content -->
<section class="content">


    <div class="row">
        <div class="col-12">
            <!-- /.card -->
            @Vereyon.Web.FlashMessageHtmlHelper.RenderFlashMessages(Html)

            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">List of @ViewData["Title"]</h3>
                </div>
                <!-- /.card-header -->
                <div class="card-body">

                    <div class="col-md-5 float-left">
                        <form asp-action="Index" method="get" class="md-form mb-3" id="searchForm">

                            <div class="input-group">
                                <input type="text" min-length="2" name="searchQuery" class="form-control" value="@ViewData["SearchQuery"]" placeholder="Enter Search words..." aria-label="Username" aria-describedby="material-addon1">

                                <div class="input-group-prepend">
                                    <button class="btn btn-md btn-light" type="submit">
                                        <i class="fas fa-search"></i>
                                        Search
                                    </button>
                                </div>
                            </div>

                        </form>

                    </div>
                    <div class="clearfix mb-3">
                        <div class="col-md-2 float-right offset-5">
                            <a asp-area="" asp-action="Create" class="btn btn-light">
                                <span><i class="fa fa-plus"></i>  Add New</span>

                            </a>
                        </div>
                    </div>

                    <div class="row mb-2">
                        <div class="col">
                        </div>


                        <div class="col-md-12 mb-1">


                            <a href="@Url.Action("Index", "Schools", new { orderBy = "school_name", searchQuery = ViewData["SearchQuery"],  pageNumber = Model.CurrentPage, data_toggle="link" })" class="btn btn-light btn-xs">
                                Name Ascending
                                <i class="fas fa-sort-up"></i>
                            </a>

                            <a href="@Url.Action("Index", "Schools", new { orderBy = "school_name_desc", searchQuery = ViewData["SearchQuery"],  pageNumber = Model.CurrentPage,  data_toggle="link"})" class="btn btn-light btn-xs">
                                Name Descending
                                <i class="fas fa-sort-down"></i>
                            </a>


                            <a href="@Url.Action("Index", "Schools", new { orderBy = "year_est", searchQuery = ViewData["SearchQuery"],  pageNumber = Model.CurrentPage, data_toggle="link" })" class="btn btn-light btn-xs">
                                Year Est. Ascending
                                <i class="fas fa-sort-up"></i>
                            </a>

                            <a href="@Url.Action("Index", "Schools", new { orderBy = "year_est_desc", searchQuery = ViewData["SearchQuery"],  pageNumber = Model.CurrentPage,  data_toggle="link"})" class="btn btn-light btn-xs">
                                Year Est. Descending
                                <i class="fas fa-sort-down"></i>
                            </a>

                        </div>
                    </div>

                    <table class="table table-bordered table-striped dataTable" role="grid" aria-describedby="example1_info">

                        <thead>
                            <tr role="row">
                                <td>Name</td>
                                <td>Category</td>
                                <td>Year Est.</td>
                                <td>Location</td>
                                <td>Address</td>
                                <td></td>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr role="row">
                                    <td>@item.SchoolName</td>
                                    <td>@item.SchoolCategoryName</td>
                                    <td>@(item.YearEstablished != null ? item.YearEstablished.Value.ToString() : "NOT STATED")</td>
                                    <td>@($"{item.LgaName}, {item.StateName}")</td>
                                    <td>@item.Address</td>

                                    <td class="text-center p-1">
                                        <span data-toggle="tooltip" data-placement="top" title="Details">
                                            <a asp-action="Details" asp-controller="Schools" asp-route-id="@item.Id" class="btn btn-light btn-sm " data-toggle="link">
                                                <i class="fas fa-desktop"></i>
                                                @*View Schools*@
                                            </a>
                                        </span>
                                        <span data-toggle="tooltip" data-placement="top" title="Update">
                                            <a asp-action="Update" asp-controller="Schools" asp-route-id="@item.Id " class="btn btn-light btn-sm" data-toggle="link">
                                                <i class="fas fa-edit"></i>
                                                @*Generate Schools*@
                                            </a>
                                        </span>


                                    </td>
                                </tr>
                            }
                            @if (Model.TotalCount < 1)
                            {
                                <tr>
                                    <td class="text-center" colspan="6">
                                        No data available in table
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>


                    @{
                        var prevDisabled = Model.HasPrevious ? "" : "disabled";
                        var nextDisabled = Model.HasNext ? "" : "disabled";
                        //var disableAll =
                    }
                    @if (Model.TotalCount > 0)
                    {
                        int range = Model.PageSize > Model.TotalCount ? Model.TotalCount : Model.PageSize;
                        <div class="row mt-2">
                            <div class="col">
                                @String.Format("Showing {0} to {1} of {2} ", (((Model.CurrentPage - 1) * range) + 1), (Model.CurrentPage * range), Model.TotalCount)
                            </div>
                            <div class="col-8">


                                <partial name="_paginationLinks" model='new PaginationLinksDto {
                                 Pages = pages, PageNumber = Model.CurrentPage, PrevDisabled = prevDisabled,
                                 NextDisabled = nextDisabled, Controller = "Schools", CurrentPage = Model.CurrentPage,
                                 TotalPages = Model.TotalPages }'>

                            </div>
                        </div>
                    }


                </div>
                <!-- /.card-body -->
            </div>
            <!-- /.card -->
        </div>
        <!-- /.col -->
    </div>



</section>
<!-- /.content -->


<script src="~/js/ajaxFormGET.js"></script>
<script src="~/js/linkClick.js"></script>