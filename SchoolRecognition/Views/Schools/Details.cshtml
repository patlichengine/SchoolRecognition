@model SchoolsViewDto
@{
    ViewData["Title"] = "School Details";
    //Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}



<link href="~/lib/datatables/datatables.min.css" rel="stylesheet" />


<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>@ViewData["Title"]</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a asp-area="" asp-controller="Home" asp-action="Index" data-toggle="link">Dashboard</a></li>
                    <li class="breadcrumb-item"><a asp-area="" asp-controller="SchoolCategories" asp-action="Index" data-toggle="link">Manage Schools</a></li>
                    <li class="breadcrumb-item"><a asp-area="" asp-controller="Schools" asp-action="Index" data-toggle="link">Registered Schools</a></li>
                    <li class="breadcrumb-item active">@ViewData["Title"]</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<!-- Main content -->
<section class="content">


    <div class="row">
        <div class="col-12">
            <!-- /.card -->
            @Vereyon.Web.FlashMessageHtmlHelper.RenderFlashMessages(Html)

            <div class="card card-primary card-outline card-outline-tabs">
                <div class="card-header p-0 border-bottom-0">
                    <ul class="nav nav-tabs" id="custom-tabs-three-tab" role="tablist">
                        <li class="nav-item">
                            <a class="nav-link active disabled" id="custom-tabs-three-home-tab" data-toggle="pill" role="tab" aria-controls="custom-tabs-three-home" aria-selected="true">
                                <b>@ViewData["Title"]</b> <span>@Model.SchoolName</span>
                            </a>
                        </li>
                    </ul>
                </div>

                <div class="card-body">
                    <div class="clearfix mb-2">

                        <div class="float-right">

                            <a asp-area="" asp-controller="Schools" asp-action="Update" asp-route-id="@Model.Id" data-toggle="link" class="btn btn-light mb-1">
                                <i class="fas fa-desktop"></i>
                                Update School
                            </a>
                            <a asp-area="" asp-controller="SchoolStates" asp-action="CreateMultiple" data-toggle="link" class="btn btn-light mb-1">
                                <i class="fas fa-book"></i>
                                Select School Subjects
                            </a>
                            <a asp-area="" asp-controller="SchoolLocalGovernments" asp-action="CreateMultiple" asp-route-ModelId="@Model.Id" data-toggle="link" class="btn btn-light mb-1">
                                <i class="fas fa-vials"></i>
                                Register School Facilities
                            </a>
                            <a asp-area="" asp-controller="SchoolLocalGovernments" asp-action="CreateMultiple" asp-route-ModelId="@Model.Id" data-toggle="link" class="btn btn-light mb-1">
                                <i class="fas fa-people-carry"></i>
                                Register School Staff
                            </a>

                        </div>

                    </div>
                    <div class="row">
                        <!-- accepted payments column -->
                        <div class="col-md-3 border">

                            <h4 class="mt-4 mb-2" style="font-weight: 100">School Details:</h4>

                            <table class="table table-striped table-borderless">

                                <tbody>
                                    <tr>
                                        <td class="p-2">
                                            <dl>
                                                <dt>Name of School</dt>
                                                <dd>@Model.SchoolName</dd>
                                            </dl>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td class="p-0">
                                            <dl>
                                                <dt>Category</dt>
                                                <dd><b>[@Model.SchoolCategoryCode]</b> @Model.SchoolCategoryName</dd>
                                            </dl>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td class="p-0">
                                            <dl>
                                                <dt>Year Established</dt>
                                                <dd>@(Model.YearEstablished != null ? Model.YearEstablished.Value.ToString() : "NOT STATED")</dd>
                                            </dl>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>

                            <table class="table table-striped table-borderless">
                                <caption style="caption-side: top">

                                    <h5 style="font-weight: 100">Contact Information:</h5>
                                </caption>
                                <tbody>
                                    <tr>
                                        <td class="p-0">
                                            <dl>
                                                <dt>Address</dt>
                                                <dd>@Model.Address</dd>
                                            </dl>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td class="p-0">
                                            <dl>
                                                <dt>LGA</dt>
                                                <dd>@($"{Model.LgaCode} {Model.LgaName}, [{Model.StateCode} {Model.StateName}]")</dd>
                                            </dl>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td class="p-0">
                                            <dl>
                                                <dt>Phone No.</dt>
                                                <dd>@(!String.IsNullOrWhiteSpace(Model.PhoneNo) ? Model.PhoneNo : "NOT STATED")</dd>
                                            </dl>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td class="p-0">
                                            <dl>
                                                <dt>Email Address</dt>
                                                <dd>@(!String.IsNullOrWhiteSpace(Model.EmailAddress) ? Model.EmailAddress : "NOT STATED")</dd>
                                            </dl>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>

                        </div>
                        <!-- /.col -->
                        <div class="col-md-9">



                            <ul class="nav nav-tabs" id="tab-content" role="tablist">
                                <li class="nav-item">
                                    <form id="formSchoolPayments" asp-action="ViewSchoolPayments" asp-route-id="@Model.Id" method="post">

                                        <button type="submit" class="nav-link  mr-1">
                                            School Payments
                                        </button>
                                    </form>
                                </li>
                                <li class="nav-item">
                                    <form id="formSchoolSubjects" action="/" method="post">
                                        <button type="submit" class="nav-link mr-1 disabled">
                                            Subjects Offered
                                        </button>
                                    </form>
                                </li>
                                <li class="nav-item">
                                    <form id="formSchoolFacilitys"  asp-action="ViewSchoolFacilitys" asp-route-id="@Model.Id" method="post">
                                        <button type="submit" class="nav-link mr-1">
                                            School Facilities
                                        </button>
                                    </form>
                                </li>
                                @*<li class="nav-item">
                        <a class="nav-link" id="tab-content-lgas-tab" data-toggle="link" href="#">
                            Subjects Offered
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" id="tab-content-Models-tab" data-toggle="link" href="#">
                            School Facilities
                        </a>
                    </li>*@
                            </ul>

                            <div class="tab-content" id="tabContent">

                                <div class="text-center p-5">

                                    <small>School Details</small>
                                    <h4 class="mt-3" style="font-weight: 100;">@Model.SchoolName</h4>
                                    <p>@Model.Address</p>

                                </div>

                            </div>


                        </div>
                        <!-- /.col -->
                    </div>
                </div>
                <!-- /.card -->
            </div>
            <!-- /.card -->
        </div>
        <!-- /.col -->
    </div>



</section>
<!-- /.content -->


<script src="~/lib/datatables/datatables.min.js"></script>
<script>

    var defaultHtml = '<div class="container centered"><div class="d-flex justify-content-center"><div class="loader text-info">Loading...</div></div></div>';


    $('#formSchoolPayments').submit(function (e) {


        e.preventDefault();

        var _url = document.getElementById("formSchoolPayments")[name = "action"];

        /* get the action attribute from the <form action=""> element */


        $('#tabContent').html(defaultHtml);

        $.ajax({
            url: _url,
            type: 'GET',
        })
        .done(function (result) {
            $('#tabContent').html(result);
            e.preventDefault();
        });
    });

</script>
<script src="~/js/linkClick.js"></script>
