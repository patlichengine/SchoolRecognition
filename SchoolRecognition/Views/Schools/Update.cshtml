@model SchoolsCreateDto
@{
    var schoolCategorys = (IEnumerable<SelectListItem>)ViewData["SchoolCategorys"];
    var officeLocalGovernments = (IEnumerable<SelectListItem>)ViewData["OfficeLocalGovernments"];
    ViewData["Title"] = "Update School";
    //Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<link href="~/lib/jquery-ui/jquery-ui.min.css" rel="stylesheet" />
<link href="~/lib/jquery-ui/jquery-ui.structure.min.css" rel="stylesheet" />
<link href="~/lib/select2/dist/css/select2.min.css" rel="stylesheet" />
<link href="~/lib/select2-bootstrap4-theme/select2-bootstrap4.min.css" rel="stylesheet" />




<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>@ViewData["Title"]</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a asp-area="" asp-controller="Home" asp-action="Index" data-toggle="link">Dashboard</a></li>
                    <li class="breadcrumb-item"><a asp-area="" asp-controller="SchoolTypes" asp-action="Index" data-toggle="link">Manage Schools</a></li>
                    <li class="breadcrumb-item"><a asp-area="" asp-controller="Schools" asp-action="Index" data-toggle="link">Registered Schools</a></li>
                    <li class="breadcrumb-item active">@ViewData["Title"]</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<!-- Main content -->
<section class="content">


    <div class="row">
        <div class="col-12">
            <!-- /.card -->
            @Vereyon.Web.FlashMessageHtmlHelper.RenderFlashMessages(Html)

            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">Update School</h3>
                </div>
                <div class="card-body">

                    <small class="text-muted mt-1 mb-2">All fields marked <b class="text-dark">*</b> are required!</small>

                    <form asp-action="Update" method="post">

                        @Html.AntiForgeryToken()

                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <input type="hidden" asp-for="Id" />
                        <input type="hidden" asp-for="OfficeId" />

                        <div class="form-group">
                            <label asp-for="SchoolName" class="control-label">School Name</label>
                            <input asp-for="SchoolName" minlength="10" maxlength="300" class="form-control" placeholder="Enter Name of School" autocomplete="off" />
                            <span asp-validation-for="SchoolName" class="text-danger"></span>
                        </div>

                        <div class="row">

                            <div class="col-md-8">


                                <div class="form-group">
                                    <label asp-for="CategoryId">School Category</label>
                                    <select asp-for="CategoryId" asp-items="@schoolCategorys.ToList()" class="form-control" required>
                                        <option value="">--Select School Category---</option>
                                    </select>
                                    <span asp-validation-for="CategoryId" class="text-danger"></span>
                                </div>

                            </div>
                            <div class="col-md-4">

                                <div class="form-group">
                                    <label asp-for="YearEstablished" class="control-label">*Year Established</label>
                                    <input min="1500" max="9999" asp-for="YearEstablished" class="form-control" placeholder="Enter Year Established" autocomplete="off" />
                                    <span asp-validation-for="YearEstablished" class="text-danger"></span>
                                </div>

                            </div>

                        </div>
                        <div class="form-group">
                            <label asp-for="Address" class="control-label">*Address</label>
                            <input minlength="3" maxlength="500" asp-for="Address" class="form-control" placeholder="Enter School Address" autocomplete="off" />
                            <span asp-validation-for="Address" class="text-danger"></span>
                        </div>
                        <div class="row">

                            <div class="col-md-8">

                                <div class="form-group">
                                    <label asp-for="LgId">LGA</label>
                                    <select asp-for="LgId" asp-items="@officeLocalGovernments.ToList()" class="form-control" required>
                                        <option value="">--Select Local Government---</option>
                                    </select>
                                    <span asp-validation-for="LgId" class="text-danger"></span>
                                </div>

                            </div>
                            <div class="col-md-4">

                                <div class="form-group">
                                    <label asp-for="PhoneNo" class="control-label">*Phone No.</label>
                                    <input minlength="4" maxlength="20" type="tel" asp-for="PhoneNo" class="form-control" placeholder="Enter Phone Number" autocomplete="off" />
                                    <span asp-validation-for="PhoneNo" class="text-danger"></span>
                                </div>

                            </div>

                        </div>

                        <div class="form-group">
                            <label asp-for="EmailAddress" class="control-label">Email</label>
                            <input type="email" asp-for="EmailAddress" class="form-control" placeholder="Enter Email Address" autocomplete="off" />
                            <span asp-validation-for="EmailAddress" class="text-danger"></span>
                        </div>

                        <h5 style="font-weight: 100">Inspection Information</h5>

                        <div class="form-group mb-3">

                            <div class="form-check form-check-inline">
                                <input class="form-check-input" type="checkbox" asp-for="IsInspected">
                                <label class="form-check-label" asp-for="IsInspected">School Has Been Inspected</label>
                            </div>
                            <div class="form-check form-check-inline">
                                <input class="form-check-input" type="checkbox" asp-for="IsCompleted">
                                <label class="form-check-label" asp-for="IsCompleted">School Is Completed</label>
                            </div>
                            <div class="form-check form-check-inline">
                                <input class="form-check-input" type="checkbox" asp-for="IsRecognised">
                                <label class="form-check-label" asp-for="IsRecognised">School Is Recognised</label>
                            </div>
                            <div class="form-check form-check-inline">
                                <input class="form-check-input" type="checkbox" asp-for="IsVetted">
                                <label class="form-check-label" asp-for="IsVetted">School Is Vetted</label>
                            </div>
                            <div class="form-check form-check-inline">
                                <input class="form-check-input" type="checkbox" asp-for="IsRecommended">
                                <label class="form-check-label" asp-for="IsRecommended">School Is Recommended</label>
                            </div>

                        </div>

                        <h5 style="font-weight: 100">Deficiencies</h5>

                        <div class="form-group mb-5">

                            <div class="form-check form-check-inline">
                                <input class="form-check-input" type="checkbox" asp-for="HasDeficientFacilitiy">
                                <label class="form-check-label" asp-for="HasDeficientFacilitiy">School Facilities Are Deficient</label>
                            </div>

                            <div class="form-check form-check-inline">
                                <input class="form-check-input" type="checkbox" asp-for="HasDeficientSubject">
                                <label class="form-check-label" asp-for="HasDeficientSubject">School Has Deficient Subjects</label>
                            </div>

                        </div>

                        <!-- /.col -->
                        <button type="submit" class="btn btn-primary btn-lg">
                            <i class="fa fa-spinner fa-spin" id="loading_icon" style="display:none"></i>
                            Save
                        </button>
                        <button type="reset" class="btn btn-secondary btn-lg"> Reset</button>

                        <!-- /.col -->

                    </form>


                </div>
                <!-- /.card-body -->
            </div>
            <!-- /.card -->
        </div>
        <!-- /.col -->
    </div>



</section>
<!-- /.content -->

@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
<script src="~/js/loading_icon.js"></script>
<script src="~/lib/jquery-ui/jquery-ui.min.js"></script>
@*<script src="~/lib/select2/dist/js/select2.min.js"></script>*@
<script src="~/lib/select2/dist/js/select2.full.min.js"></script>
<script>
    $(document).ready(function () {
        $('select.form-control').select2({
            theme: 'bootstrap4'
        });
        //$('.select2me').select2();
    });
</script>
<script>
    // add the rule here
    $.validator.addMethod("valueNotEquals", function (value, element, arg) {
        return arg !== value;
    }, "Select a valid value!");
    $("form").validate({
        rules: {
            //School Information
            SchoolName: {
                required: true,
                minlength: 10,
                maxlength: 300
            },
            YearEstablished: {
                required: true,
                min: 1500,
                max: 9999
            },
            Address: {
                required: true,
                minlength: 3,
                maxlength: 500
            },
            LgId: {
                required: true,
                valueNotEquals: ""
                //min: 1
            },
            PhoneNo: {
                required: true,
                minlength: 4,
                maxlength: 20
            },
            EmailAddress: {
                required: true,
                email: true
            },

        },
        messages: {
            //School Information
            SchoolName: {
                required: "This field is required!",
                minlength: "This field must have at least 10 characters!",
                maxlength: "This field must have less than 300 characters!",
            },
            YearEstablished: {
                required: "This field is required!",
                min: "This field must be greater than 1500!",
                max: "This field must be less 9999!"
            },
            Address: {
                required: "This field is required!",
                minlength: "This field must have at least 3 characters!",
                maxlength: "This field must have less than 500 characters!",
            },
            LgId: {
                required: "This field is required!",
                valueNotEquals: "Select a valid input!"
                //min: 1
            },
            PhoneNo: {
                required: "This field is required!",
                minlength: "This field must have at least 4 characters!",
                maxlength: "This field must have less than 20 characters!",
            },
            EmailAddress: {
                required: "This field is required!",
                email: "This field must be a valid email address!"
            },
        }
    });
</script>
<script src="~/js/ajaxFormSubmit.js"></script>
<script src="~/js/linkClick.js"></script>

