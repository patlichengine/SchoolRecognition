@model OfficesViewDto
@{
    ViewData["Title"] = "Delete Office";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
@section styles{

    <link href="~/lib/jquery-ui/jquery-ui.min.css" rel="stylesheet" />
    <link href="~/lib/jquery-ui/jquery-ui.structure.min.css" rel="stylesheet" />
    <link href="~/lib/select2/dist/css/select2.min.css" rel="stylesheet" />

}


<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>@ViewData["Title"]</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a asp-area="" asp-controller="Home" asp-action="Index">Dashboard</a></li>
                    <li class="breadcrumb-item"><a asp-area="" asp-controller="Offices" asp-action="Index">Manage Offices</a></li>
                    <li class="breadcrumb-item"><a asp-area="" asp-controller="Offices"  asp-action="Details" asp-route-id="9c338b95-d8b1-479f-8104-54e23de90283">@Model.OfficeName</a></li>
                    <li class="breadcrumb-item active">@ViewData["Title"]</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<!-- Main content -->
<section class="content">


    <div class="row">
        <div class="col-12">
            <!-- /.card -->

            <div class="card card-danger">
                <div class="card-header">
                    <h3 class="card-title">Delete Office</h3>
                </div>
                <div class="card-body">

                    @*<small class="text-muted mt-1 mb-2">All fields marked <b class="text-dark">*</b> are required!</small>*@

                    <p class="text-danger lead">
                        <strong class="text-danger"><i class="fas fa-exclamation-triangle"></i> Attention:</strong> Once completed this operation cannot be reversed!
                    </p>
                    <p class="font-italic">
                        Are you sure you want to delete this <b>Office</b> from the system?
                    </p>
                    <form asp-action="Create" method="post">

                        @Html.AntiForgeryToken()

                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>


                        <input type="hidden" asp-for="Id">



                        <table class="table table-responsive-md table-borderless">
                            <tbody style="font-size:16px">
                                <tr>
                                    <td>
                                        <dl>
                                            <dt>Office</dt>
                                            <dd>@Model.OfficeName</dd>
                                        </dl>
                                    </td>
                                </tr>
                                <tr>
                                    <td>
                                        <dl>
                                            <dt>Address</dt>
                                            <dd>@Model.OfficeAddress</dd>
                                        </dl>
                                    </td>
                                </tr>
                            </tbody>
                        </table>


                        <!-- /.col -->
                        <button type="submit" class="btn btn-danger btn-lg">
                            <i class="fa fa-spinner fa-spin" id="loading_icon" style="display:none"></i>
                            Delete
                        </button>
                        <a asp-area="" asp-controller="Offices" asp-action="Details" asp-route-id="9c338b95-d8b1-479f-8104-54e23de90283" class="btn btn-secondary btn-lg"> Cancel</a>

                        <!-- /.col -->

                    </form>


                </div>
                <!-- /.card-body -->
            </div>
            <!-- /.card -->
        </div>
        <!-- /.col -->
    </div>



</section>
<!-- /.content -->

@section scripts{
    <script src="~/js/loading_icon.js"></script>
    <script src="~/lib/jquery-ui/jquery-ui.min.js"></script>
    @*<script src="~/lib/select2/dist/js/select2.min.js"></script>*@
    <script src="~/lib/select2/dist/js/select2.full.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation/dist/additional-methods.min.js"></script>
    <script>
            $(document).ready(function () {
                $('select.form-control').select2({
                    theme: "classic"
                });
                //$('.select2me').select2();
            });
    </script>
    <script>
        // add the rule here
        //$.validator.addMethod("valueNotEquals", function (value, element, arg) {
        //    return arg !== value;
        //}, "Select a valid value!");
        // add the rule here
        $.validator.addMethod("valueNotEquals", function (value, element, arg) {
            return arg !== value;
        }, "Select a valid value!");
        $("form").validate({
            rules: {
                OfficeName: {
                    required: true,
                    minlength: 5,
                    maxlength: 60
                },
                OfficeAddress: {
                    required: true,
                    minlength: 5,
                    maxlength: 150
                },
                StateId: {
                    required: true,
                    valueNotEquals: ""
                    //min: 1
                },

            },
            messages: {
                OfficeName: {
                    required: "This field is required!",
                    minlength: "This field must have at least 5 characters!",
                    maxlength: "This field must have less than 60 characters!",
                },
                OfficeAddress: {
                    required: "This field is required!",
                    minlength: "This field must have at least 5 characters!",
                    maxlength: "This field must have less than 150 characters!",
                },
                StateId: {
                    required: "This field is required!",
                    valueNotEquals: "Select a valid value!"
                },
            }
        });
    </script>

}


