@model OfficesViewDto
@{
    ViewData["Title"] = "Office Details";
    //Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}



<link href="~/lib/datatables/datatables.min.css" rel="stylesheet" />


<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>@ViewData["Title"]</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a asp-area="" asp-controller="Home" asp-action="Index" data-toggle="link">Dashboard</a></li>
                    <li class="breadcrumb-item"><a asp-area="" asp-controller="OfficeTypes" asp-action="Index" data-toggle="link">Manage Offices</a></li>
                    <li class="breadcrumb-item active">Offices</li>
                    <li class="breadcrumb-item active">@ViewData["Title"]</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<!-- Main content -->
<section class="content">


    <div class="row">
        <div class="col-12">
            <!-- /.card -->
            @Vereyon.Web.FlashMessageHtmlHelper.RenderFlashMessages(Html)

            <div class="card card-primary card-outline card-outline-tabs">
                <div class="card-header p-0 border-bottom-0">
                    <ul class="nav nav-tabs" id="custom-tabs-three-tab" role="tablist">
                        <li class="nav-item">
                            <a class="nav-link active disabled" id="custom-tabs-three-home-tab" data-toggle="pill" role="tab" aria-controls="custom-tabs-three-home" aria-selected="true">
                                <b>@ViewData["Title"]</b> <span>@($"{Model.OfficeName} {Model.OfficeTypeDescription}")</span>
                            </a>
                        </li>
                    </ul>
                </div>

                <div class="card-body">
                    <div class="row">
                        <!-- accepted payments column -->
                        <div class="col-md-3 border">

                            <h4 class="mt-4 mb-2" style="font-weight: 100">Office Details:</h4>

                            <table class="table table-striped table-borderless">

                                <tbody>
                                    <tr>
                                        <td class="p-0">
                                            <dl>
                                                <dt>Office Name</dt>
                                                <dd>@Model.OfficeName</dd>
                                            </dl>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td class="p-0">
                                            <dl>
                                                <dt>Type of Office</dt>
                                                <dd>@Model.OfficeTypeDescription</dd>
                                            </dl>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td class="p-0">
                                            <dl>
                                                <dt>Date Created</dt>
                                                <dd>@(Model.DateCreated != null ? Model.DateCreated.Value.ToString("dd-MMM-yyyy") : null)</dd>
                                            </dl>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>

                            <table class="table table-striped table-borderless">
                                <caption style="caption-side: top">

                                    <h5 style="font-weight: 100">Location:</h5>
                                </caption>
                                <tbody>
                                    <tr>
                                        <td class="p-0">
                                            <dl>
                                                <dt>Address</dt>
                                                <dd>@Model.OfficeAddress</dd>
                                            </dl>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td class="p-0">
                                            <dl>
                                                <dt>State Located</dt>
                                                <dd>@Model.StateName</dd>
                                            </dl>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td class="p-0">
                                            <dl>
                                                <dt>Latitude</dt>
                                                <dd>@(Model.Latitude != null ? Model.Latitude.ToString() : "NOT STATED")</dd>
                                            </dl>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td class="p-0">
                                            <dl>
                                                <dt>Longitude</dt>
                                                <dd>@(Model.Longitude != null ? Model.Longitude.ToString() : "NOT STATED")</dd>
                                            </dl>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>

                        </div>
                        <!-- /.col -->
                        <div class="col-md-9">


                            <div class="clearfix mb-2">

                                <div class="float-right">

                                    <a asp-area="" asp-controller="Offices" asp-action="Update" asp-route-id="@Model.Id" data-toggle="link" class="btn btn-light">
                                        <i class="fas fa-desktop"></i>
                                        Update Office
                                    </a>
                                    <a asp-area="" asp-controller="OfficeStates" asp-action="CreateMultiple" data-toggle="link" class="btn btn-light">
                                        <i class="fas fa-exchange-alt"></i>
                                        Assign States to Office
                                    </a>
                                    <a asp-area="" asp-controller="OfficeLocalGovernments" asp-action="CreateMultiple" asp-route-ModelId="@Model.Id" data-toggle="link" class="btn btn-light">
                                        <i class="fas fa-exchange-alt"></i>
                                        Assign LGAs to Office
                                    </a>
                                    <a asp-area="" asp-controller="Offices" asp-action="Delete" asp-route-id="@Model.Id" data-toggle="link" class="btn btn-danger">
                                        <i class="fas fa-trash-alt"></i>
                                        Delete Office
                                    </a>

                                </div>

                            </div>

                            <ul class="nav nav-tabs" id="tab-content" role="tablist">
                                <li class="nav-item">
                                    <a class="nav-link active" id="tab-content-states-tab" data-toggle="pill" href="#tab-content-states" role="tab" aria-controls="tab-content-states" aria-selected="true">
                                        States Controlled
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" id="tab-content-lgas-tab" data-toggle="pill" href="#tab-content-lgas" role="tab" aria-controls="tab-content-lgas" aria-selected="false">
                                        Local Governments Controlled
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" id="tab-content-schools-tab" data-toggle="pill" href="#tab-content-schools" role="tab" aria-controls="tab-content-schools" aria-selected="false">
                                        Schools Managed
                                    </a>
                                </li>
                            </ul>

                            <div class="tab-content" id="tabContent">

                                <div class="text-center p-5">

                                    <small>Office Details</small>
                                    <h4 class="mt-3" style="font-weight: 100;">@Model.OfficeName</h4>
                                    <p>@Model.OfficeTypeDescription</p>

                                </div>

                            </div>


                        </div>
                        <!-- /.col -->
                    </div>
                </div>
                <!-- /.card -->
            </div>
            <!-- /.card -->
        </div>
        <!-- /.col -->
    </div>



</section>
<!-- /.content -->


<script src="~/lib/datatables/datatables.min.js"></script>
<script>
    $(document).ready(function () {
        $('#datatable-1').DataTable({
            responsive: true,
            //"order": [[ 0, "desc" ]]
        });
    });
</script>
<script>
    $(document).ready(function () {
        $('#datatable-2').DataTable({
            responsive: true,
            //"order": [[ 0, "desc" ]]
        });
    });
</script>
<script src="~/js/ajaxFormGET.js"></script>
<script src="~/js/linkClick.js"></script>
