@{
    ViewData["Title"] = "Manage Offices";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

@section styles{
    <link href="~/lib/datatables/datatables.min.css" rel="stylesheet" />

}

<!-- Content Header (Page header) -->
<section class="content-header">
