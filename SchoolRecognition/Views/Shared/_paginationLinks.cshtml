
@model PaginationLinksDto

<ul class="pagination">
    <li class="page-item @Model.PrevDisabled">
        <a asp-controller="@Model.Controller" asp-action="Index"
           asp-route-orderBy="@ViewData["OrderBy"]"
           asp-route-searchQuery="@ViewData["SearchQuery"]"
           asp-route-pageNumber=""
           class="page-link" data-toggle="link">
            <i class="fas fa-angle-double-left"></i>
        </a>
    </li>
    <li class="page-item @Model.PrevDisabled">
        <a asp-controller="Accounts" asp-action="Index"
           asp-route-orderBy="@ViewData["OrderBy"]"
           asp-route-searchQuery="@ViewData["SearchQuery"]"
           asp-route-pageNumber="@(Model.CurrentPage - 1)"
           class="page-link" data-toggle="link">
            <i class="fas fa-angle-left"></i>
        </a>
    </li>
    @foreach (var item in Model.Pages)
    {
        <li class="@(item == Model.CurrentPage ? "page-item active" : "page-item")">
            <a asp-controller="@Model.Controller" asp-action="Index"
               asp-route-orderBy="@ViewData["OrderBy"]"
               asp-route-searchQuery="@ViewData["SearchQuery"]"
               asp-route-pageNumber="@item"
               class="page-link" data-toggle="link">
                @item
            </a>
        </li>
    }
    <li class="page-item @Model.NextDisabled">
        <a asp-controller="@Model.Controller" asp-action="Index"
           asp-route-orderBy="@ViewData["OrderBy"]"
           asp-route-searchQuery="@ViewData["SearchQuery"]"
           asp-route-pageNumber="@(Model.CurrentPage + 1)"
           class="page-link" data-toggle="link">
            <i class="fas fa-angle-right"></i>
        </a>
    </li>
    <li class="page-item @Model.NextDisabled">
        <a asp-controller="@Model.Controller" asp-action="Index"
           asp-route-orderBy="@ViewData["OrderBy"]"
           asp-route-searchQuery="@ViewData["SearchQuery"]"
           asp-route-pageNumber="@Model.TotalPages"
           class="page-link" data-toggle="link">
            <i class="fas fa-angle-double-right"></i>
        </a>
    </li>
</ul>
