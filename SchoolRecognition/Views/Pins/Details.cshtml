@model PinsViewDto
@{
    ViewData["Title"] = Model.SerialNumber;
}


    <link href="~/lib/datatables/datatables.min.css" rel="stylesheet" />


<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>@ViewData["Title"]</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a asp-area="" asp-controller="Home" asp-action="Index" data-toggle="link">Dashboard</a></li>
                    <li class="breadcrumb-item"><a asp-area="" asp-controller="RecognitionTypes" asp-action="Index" data-toggle="link">Manage Pins</a></li>
                    <li class="breadcrumb-item active">@ViewData["Title"]</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<!-- Main content -->
<section class="content">


    <div class="row">
        <div class="col-12">
            <!-- /.card -->
            @Vereyon.Web.FlashMessageHtmlHelper.RenderFlashMessages(Html)

            <div class="card card-primary card-outline card-outline-tabs">
                <div class="card-header p-0 border-bottom-0">
                    <ul class="nav nav-tabs" id="custom-tabs-three-tab" role="tablist">
                        <li class="nav-item">
                            <a class="nav-link active disabled" id="custom-tabs-three-home-tab" data-toggle="pill" role="tab" aria-controls="custom-tabs-three-home" aria-selected="true">
                                <b>@ViewData["Title"]</b> Pin Details
                            </a>
                        </li>
                    </ul>
                </div>

                <div class="card-body">
                    <div class="row">
                        <!-- accepted payments column -->
                        <div class="col-md-3 border">

                            <h4 class="mt-2" style="font-weight: 100">Pin Details:</h4>

                            <table class="table table-striped table-borderless">

                                <tbody>
                                    <tr>
                                        <td class="p-0">
                                            <dl>
                                                <dt>Serial Number</dt>
                                                <dd>@Model.SerialNumber</dd>
                                            </dl>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td class="p-0">
                                            <dl>
                                                <dt>Recognition Type</dt>
                                                <dd>@Model.RecognitionTypeName</dd>
                                            </dl>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td class="p-0">
                                            <dl>
                                                <dt>Date Generated</dt>
                                                <dd>@(Model.DateCreated != null ? Model.DateCreated.Value.ToString("dd-MMM-yyyy") : null)</dd>
                                            </dl>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td class="p-0">
                                            <dl>
                                                <dt>Generated By</dt>
                                                <dd>@(!String.IsNullOrWhiteSpace(Model.CreatedByUser) ? Model.CreatedByUser : "NOT STATED")</dd>
                                            </dl>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td class="p-0">
                                            <dl>
                                                <dt>Active</dt>
                                                <dd>
                                                    @if (Model.IsActive)
                                                    {
                                                        <i class="fas fa-check text-success"></i>
                                                    }
                                                    else
                                                    {

                                                        <i class="fas fa-times text-danger"></i>
                                                    }
                                                </dd>
                                            </dl>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td class="p-0">
                                            <dl>
                                                <dt>Used</dt>
                                                <dd>
                                                    @if (Model.IsInUse)
                                                    {
                                                        <i class="fas fa-check text-success"></i>
                                                    }
                                                    else
                                                    {

                                                        <i class="fas fa-times text-danger"></i>
                                                    }
                                                </dd>
                                            </dl>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>

                        </div>
                        <!-- /.col -->
                        <div class="col-md-9">


                            <div class="clearfix">
                                
                                <div class="float-right">

                                    <a asp-area="" asp-controller="Pins" asp-action="PinHistories" asp-route-id="@Model.Id" data-toggle="link" class="btn btn-light" data-toggle="link">
                                        <i class="fas fa-binoculars"></i>
                                        Pin User-Tracker
                                    </a>
                                    <a asp-area="" asp-controller="Pins" asp-action="Delete" asp-route-id="@Model.Id" data-toggle="link" class="btn btn-danger" data-toggle="link">
                                        <i class="fas fa-trash-alt"></i>
                                        Delete Pin
                                    </a>

                                </div>

                            </div>

                            <h4 style="font-weight: 100;">Payment Information:</h4>
                            <table id="datatable-1" class="table table-bordered table-striped table-responsive-md" role="grid" aria-describedby="example1_info">
                                <thead>
                                    <tr role="row">
                                        <td>Date</td>
                                        <td>School</td>
                                        <td>Amount Paid</td>
                                        <td></td>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model.Payments)
                                    {
                                    <tr role="row">
                                        <td>@(item.DateCreated != null ? item.DateCreated.Value.ToString("dd-MMM-yyyy") : "NOT STATED")</td>
                                        <td>@item.SchoolName</td>
                                        <td>@(item.AmountPaid != null ? item.AmountPaid.Value.ToString("#,##0") : "0")</td>
                                        <td class="text-center p-1">
                                            <span data-toggle="tooltip" data-placement="top" title="View Pins">

                                                <a asp-action="Details" asp-controller="SchoolPayments" asp-route-id="@item.Id" class="btn btn-light btn-sm " data-toggle="link">
                                                    <i class="fas fa-desktop"></i>
                                                    @*View Pins*@
                                                </a>
                                            </span>
                                        </td>
                                    </tr>
                                    }

                                </tbody>
                            </table>

                        </div>
                        <!-- /.col -->
                    </div>
                </div>
                <!-- /.card -->
            </div>
            <!-- /.card -->
        </div>
        <!-- /.col -->
    </div>
</section>
<!-- /.content -->


<script src="~/lib/datatables/datatables.min.js"></script>
    <script>
        $(document).ready( function () {
            $('#datatable-1').DataTable({
                responsive: true,
                "order": [[ 0, "desc" ]]
            });
        } );
    </script>
    <script type="text/javascript" src="~/js/linkClick.js"></script>

