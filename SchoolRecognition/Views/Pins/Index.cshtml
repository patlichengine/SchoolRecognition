@model PagedList<PinsViewDto>
@{
    var pages = (IEnumerable<int>)ViewData["Pages"];
    ViewData["Title"] = "All Pins Generated";
    //Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}


<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>@ViewData["Title"]</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a asp-area="" asp-controller="Home" asp-action="Index">Dashboard</a></li>
                    <li class="breadcrumb-item"><a asp-area="" asp-controller="RecognitionTypes" asp-action="Index">Manage Pins</a></li>
                    <li class="breadcrumb-item active">@ViewData["Title"]</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<!-- Main content -->
<section class="content">


    <div class="row">
        <div class="col-12">
            <!-- /.card -->
            @Vereyon.Web.FlashMessageHtmlHelper.RenderFlashMessages(Html)

            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">List of Recognition Pins</h3>
                </div>
                <!-- /.card-header -->
                <div class="card-body">


                    <div class="clearfix mb-3">
                        <div class="float-right">
                            <a asp-area="" asp-action="GeneratePins"  class="btn btn-light">
                                <i class="fas fa-receipt"></i>
                                Generate Pins
                            </a>
                        </div>
                    </div>


                    <div class="row mb-2">
                        <div class="col">
                        </div>
                        <div class="col-8">

                            <form asp-action="ViewPins"  method="get" class="md-form mb-3" id="searchForm">

                                <div class="input-group">
                                    <input type="text" min-length="2" name="searchQuery" class="form-control" value="@ViewData["SearchQuery"]" placeholder="Enter Search words..." aria-label="Username" aria-describedby="material-addon1">
                                    @*<div class="input-group-prepend">
                            <span class="input-group-text md-addon" id="material-addon1">
                                <i class="fas fa-search"></i>
                            </span>
                        </div>*@
                                    <div class="input-group-prepend">
                                        <button class="btn btn-md btn-light" type="submit">
                                            <i class="fas fa-search"></i>
                                            Search
                                        </button>
                                    </div>
                                </div>



                            </form>

                        </div>

                        <div class="col-md-12 mb-1">


                            <a href="@Url.Action("Index", "Pins", new { orderBy = "serial_number", searchQuery = ViewData["SearchQuery"],  pageNumber = Model.CurrentPage })" class="btn btn-light btn-xs">
                                Serial Number Ascending
                                <i class="fas fa-sort-up"></i>
                            </a>

                            <a href="@Url.Action("Index", "Pins", new { orderBy = "serial_number_desc", searchQuery = ViewData["SearchQuery"],  pageNumber = Model.CurrentPage})" class="btn btn-light btn-xs">
                                Serial Number Descending
                                <i class="fas fa-sort-down"></i>
                            </a>
                            <a href="@Url.Action("Index", "Pins", new { orderBy = "date", searchQuery = ViewData["SearchQuery"], pageNumber = Model.CurrentPage })" class="btn btn-light btn-xs">
                                Date Generated Ascending
                                <i class="fas fa-sort-up"></i>
                            </a>
                            <a href="@Url.Action("Index", "Pins", new {  orderBy = "date_desc", searchQuery = ViewData["SearchQuery"], pageNumber = Model.CurrentPage })" class="btn btn-light btn-xs">
                                Date Generated Descending
                                <i class="fas fa-sort-down"></i>
                            </a>

                        </div>
                    </div>

                    <table class="table table-bordered table-striped dataTable" role="grid" aria-describedby="example1_info">

                        <thead>
                            <tr role="row">
                                <td>Date Generated</td>
                                <td>Serial Number</td>
                                <td>Recognition Type</td>
                                <td>Active</td>
                                @*<td>In Use</td>*@
                                <td>School Assigned</td>
                                <td>School Category</td>
                                <td></td>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                            <tr role="row">
                                <td>@(item.DateCreated != null ? item.DateCreated.Value.ToString("d-MMM-yyyy") : "NOT STATED")</td>
                                <td>@item.SerialNumber</td>
                                <td>@item.RecognitionTypeName</td>
                                <td>
                                    @if (item.IsActive)
                                    {
                                        <i class="fas fa-check text-success"></i>
                                    }
                                    else
                                    {

                                        <i class="fas fa-times text-danger"></i>
                                    }
                                </td>
                                <td>
                                    @if (item.IsInUse)
                                    {
                                        <span>@item.AssignedSchoolName</span>
                                    }
                                    else
                                    {
                                        <span>NOT ASSIGNED</span>
                                    }
                                </td>
                                <td>
                                    @if (item.IsInUse)
                                    {
                                        <span>@item.AssignedSchoolCategoryName</span>
                                    }
                                    else
                                    {
                                        <span>NOT ASSIGNED</span>
                                    }
                                </td>
                                <td class="text-center p-1">
                                    <a asp-action="Details" asp-controller="Pins" asp-route-id="@item.Id" class="btn btn-light btn-sm " data-toggle="tooltip" data-placement="top" title="Details">
                                        <i class="fas fa-desktop"></i>
                                        @*View Pins*@
                                    </a>
                                    <a asp-action="Delete" asp-controller="Pins" asp-route-id="@item.Id " class="btn btn-danger btn-sm" data-toggle="tooltip" data-placement="top" title="Delete">
                                        <i class="fas fa-trash"></i>
                                        @*Generate Pins*@
                                    </a>
                                </td>
                            </tr>
                            }
                            @if (Model.TotalCount < 1)
                            {
                                <tr>
                                    <td class="text-center" colspan="5">
                                        No data available in table
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>


                    @{
                        var prevDisabled = Model.HasPrevious ? "" : "disabled";
                        var nextDisabled = Model.HasNext ? "" : "disabled";
                        //var disableAll =
                    }
                    @if (Model.TotalCount > 0)
                    {
                        int range = Model.PageSize > Model.TotalCount ? Model.TotalCount : Model.PageSize;
                        <div class="row mt-2">
                            <div class="col">
                                @String.Format("Showing {0} to {1} of {2} ", (((Model.CurrentPage - 1) * range) + 1), (Model.CurrentPage * range), Model.TotalCount)
                            </div>
                            <div class="col-8">

                                <partial name="_paginationLinks" model='new PaginationLinksDto {
                                 Pages = pages, PageNumber = Model.CurrentPage, PrevDisabled = prevDisabled,
                                 NextDisabled = nextDisabled, Controller = "Pins", Action = "Index", CurrentPage = Model.CurrentPage,
                                 TotalPages = Model.TotalPages }'>
                            </div>
                        </div>
                    }


                </div>
                <!-- /.card-body -->
            </div>
            <!-- /.card -->
        </div>
        <!-- /.col -->
    </div>



</section>
<!-- /.content -->

