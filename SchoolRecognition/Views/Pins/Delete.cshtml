@model PinsViewDto
@{
    ViewData["Title"] = "Delete Pin";
}

<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>@ViewData["Title"]</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a asp-area="" asp-controller="Home" asp-action="Index" data-toggle="link">Dashboard</a></li>
                    <li class="breadcrumb-item"><a asp-area="" asp-controller="RecognitionTypes" asp-action="Index" data-toggle="link">Manage Pins</a></li>
                    <li class="breadcrumb-item"><a asp-area="" asp-controller="RecognitionTypes" asp-action="ViewPins" asp-route-id="@Model.Id" data-toggle="link">@Model.SerialNumber</a></li>
                    <li class="breadcrumb-item active">@ViewData["Title"]</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<!-- Main content -->
<section class="content">


    <div class="row">
        <div class="col-12">
            <!-- /.card -->

            <div class="card card-danger">
                <div class="card-header">
                    <h3 class="card-title">Delete Pin</h3>
                </div>
                <div class="card-body">

                    @*<small class="text-muted mt-1 mb-2">All fields marked <b class="text-dark">*</b> are required!</small>*@

                    <p class="text-danger lead">
                        <strong class="text-danger"><i class="fas fa-exclamation-triangle"></i> Attention:</strong> Once completed this operation cannot be reversed!
                    </p>
                    <p class="font-italic">
                        Are you sure you want to delete this <b>Pin</b> from the system?
                    </p>
                    <form asp-action="Delete" method="post">

                        @Html.AntiForgeryToken()

                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>


                        <input type="hidden" asp-for="Id">



                        <table class="table table-responsive-md table-borderless">
                            <tbody style="font-size:16px">
                                <tr>
                                    <td class="p-0">
                                        <dl>
                                            <dt>Serial Number</dt>
                                            <dd>@Model.SerialNumber</dd>
                                        </dl>
                                    </td>
                                </tr>
                                <tr>
                                    <td class="p-0">
                                        <dl>
                                            <dt>Recognition Type</dt>
                                            <dd>@Model.RecognitionTypeName</dd>
                                        </dl>
                                    </td>
                                </tr>
                                <tr>
                                    <td class="p-0">
                                        <dl>
                                            <dt>Date Generated</dt>
                                            <dd>@(Model.DateCreated != null ? Model.DateCreated.Value.ToString("dd-MMM-yyyy") : "NOT STATED")</dd>
                                        </dl>
                                    </td>
                                </tr>
                                <tr>
                                    <td class="p-0">
                                        <dl>
                                            <dt>Active</dt>
                                            <dd>
                                                @if (Model.IsActive)
                                                {
                                                    <i class="fas fa-check text-success"></i>
                                                }
                                                else
                                                {

                                                    <i class="fas fa-times text-danger"></i>
                                                }
                                            </dd>
                                        </dl>
                                    </td>
                                </tr>
                                <tr>
                                    <td class="p-0">
                                        <dl>
                                            <dt>Used</dt>
                                            <dd>
                                                @if (Model.IsInUse)
                                                {
                                                    <i class="fas fa-check text-success"></i>
                                                }
                                                else
                                                {

                                                    <i class="fas fa-times text-danger"></i>
                                                }
                                            </dd>
                                        </dl>
                                    </td>
                                </tr>
                            </tbody>
                        </table>


                        <!-- /.col -->
                        <button type="submit" class="btn btn-danger btn-lg">
                            <i class="fa fa-spinner fa-spin" id="loading_icon" style="display:none"></i>
                            Delete
                        </button>
                        <a asp-area="" asp-controller="RecognitionTypes" asp-action="ViewPins" asp-route-id="@Model.Id" data-toggle="link" class="btn btn-secondary btn-lg"> Cancel</a>

                        <!-- /.col -->

                    </form>


                </div>
                <!-- /.card-body -->
            </div>
            <!-- /.card -->
        </div>
        <!-- /.col -->
    </div>



</section>
<!-- /.content -->
<script src="~/js/ajaxFormSubmit.js"></script>
<script src="~/js/linkClick.js"></script>