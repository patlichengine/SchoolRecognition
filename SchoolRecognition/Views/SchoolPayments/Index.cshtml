@model PagedList<SchoolPaymentsViewDto>
@{
    var pages = (IEnumerable<int>)ViewData["Pages"];
    ViewData["Title"] = "Manage Payments";
    //Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

@section styles{
    @*<link href="~/lib/datatables/datatables.min.css" rel="stylesheet" />*@

}


<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>@ViewData["Title"]</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a asp-area="" asp-controller="Home" asp-action="Index">Dashboard</a></li>
                    <li class="breadcrumb-item"><a asp-area="" asp-controller="SchoolPayments" asp-action="Index">Manage Payments</a></li>
                    <li class="breadcrumb-item active">@ViewData["Title"]</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<!-- Main content -->
<section class="content">


    <div class="row">
        <div class="col-12">
            <!-- /.card -->
            @Vereyon.Web.FlashMessageHtmlHelper.RenderFlashMessages(Html)

            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">List of @ViewData["Title"]</h3>
                </div>
                <!-- /.card-header -->
                <div class="card-body">


                    <div class="clearfix mb-3">
                        <div class="float-right">
                            <a asp-area="" asp-action="Create" class="btn btn-light">
                                <i class="fas fa-plus"></i>
                                New SchoolPayment
                            </a>
                        </div>
                    </div>


                    <div class="row mb-2">
                        <div class="col">
                        </div>
                        <div class="col-8">

                            <form asp-action="Index" method="get" class="md-form mb-3" id="searchForm">

                                <div class="input-group">
                                    <input type="text" min-length="2" name="searchQuery" class="form-control" value="@ViewData["SearchQuery"]" placeholder="Enter Search words..." aria-label="Username" aria-describedby="material-addon1">
                                    @*<div class="input-group-prepend">
                                            <span class="input-group-text md-addon" id="material-addon1">
                                                <i class="fas fa-search"></i>
                                            </span>
                                        </div>*@
                                    <div class="input-group-prepend">
                                        <button class="btn btn-md btn-light" type="submit">
                                            <i class="fas fa-search"></i>
                                            Search
                                        </button>
                                    </div>
                                </div>



                            </form>

                        </div>

                        <div class="col-md-12 mb-1">


                            <a href="@Url.Action("Index", "SchoolPayments", new { orderBy = "date", searchQuery = ViewData["SearchQuery"],  pageNumber = Model.CurrentPage })" class="btn btn-light btn-xs">
                                Date Ascending
                                <i class="fas fa-sort-up"></i>
                            </a>

                            <a href="@Url.Action("Index", "SchoolPayments", new { orderBy = "date_desc", searchQuery = ViewData["SearchQuery"],  pageNumber = Model.CurrentPage})" class="btn btn-light btn-xs">
                                Date Descending
                                <i class="fas fa-sort-down"></i>
                            </a>

                            <a href="@Url.Action("Index", "SchoolPayments", new { orderBy = "receipt_no", searchQuery = ViewData["SearchQuery"],  pageNumber = Model.CurrentPage })" class="btn btn-light btn-xs">
                                Receipt No. Ascending
                                <i class="fas fa-sort-up"></i>
                            </a>

                            <a href="@Url.Action("Index", "SchoolPayments", new { orderBy = "receipt_no_desc", searchQuery = ViewData["SearchQuery"],  pageNumber = Model.CurrentPage})" class="btn btn-light btn-xs">
                                Receipt No. Descending
                                <i class="fas fa-sort-down"></i>
                            </a>

                        </div>
                    </div>

                    <table class="table table-bordered table-striped dataTable" role="grid" aria-describedby="example1_info">

                        <thead>
                            <tr role="row">
                                <td>Date</td>
                                <td data-toggle="tooltip" data-placement="top" title="Recognition Type">RT</td>
                                <td>School</td>
                                <td>PIN Number</td>
                                <td data-toggle="tooltip" data-placement="top" title="Amount Paid">Amount</td>
                                <td>Receipt No.</td>
                                <td></td>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                            <tr role="row">
                                <td>@(item.DateCreated != null ? item.DateCreated.Value.ToString("d-MMM-yyyy") : "NOT STATED")</td>
                                <td>@item.RecognitionTypeCode</td>
                                <td>@item.SchoolName</td>
                                <td>@item.PinSerialNumber</td>
                                <td>@(item.AmountPaid != null ? item.AmountPaid.Value.ToString("#,##0") : "NOT STATED")</td>
                                <td>@item.PaymentReceiptNo</td>

                                <td class="text-center p-1">
                                    <a asp-action="Details" asp-controller="SchoolPayments" asp-route-id="@item.Id" class="btn btn-light btn-sm " data-toggle="tooltip" data-placement="top" title="Details">
                                        <i class="fas fa-desktop"></i>
                                        @*View SchoolPayments*@
                                    </a>
                        
                                </td>
                            </tr>
                            }
                            @if (Model.TotalCount < 1)
                            {
                                <tr>
                                    <td class="text-center" colspan="7">
                                        No data available in table
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>


                    @{
                        var prevDisabled = Model.HasPrevious ? "" : "disabled";
                        var nextDisabled = Model.HasNext ? "" : "disabled";
                        //var disableAll =
                    }
                    @if (Model.TotalCount > 0)
                    {
                        int range = Model.PageSize > Model.TotalCount ? Model.TotalCount : Model.PageSize;
                        <div class="row mt-2">
                            <div class="col">
                                @String.Format("Showing {0} to {1} of {2} ", (((Model.CurrentPage - 1) * range) + 1), (Model.CurrentPage * range), Model.TotalCount)
                            </div>
                            <div class="col-8">

                                <partial name="_paginationLinks" model='new PaginationLinksDto {
                                 Pages = pages, PageNumber = Model.CurrentPage, PrevDisabled = prevDisabled,
                                 NextDisabled = nextDisabled, Controller = "SchoolPayments", Action = "Index", CurrentPage = Model.CurrentPage,
                                 TotalPages = Model.TotalPages }'>
                            </div>
                        </div>
                    }


                </div>
                <!-- /.card-body -->
            </div>
            <!-- /.card -->
        </div>
        <!-- /.col -->
    </div>



</section>
<!-- /.content -->

