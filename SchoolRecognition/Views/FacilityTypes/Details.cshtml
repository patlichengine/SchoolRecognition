@model SchoolRecognition.Models.FacilityTypesDto

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}


<!-- Content Wrapper. Contains page content -->
<section class="form-simple">

    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a asp-action="Index">Home</a></li>
                        <li class="breadcrumb-item active">Details</li>
                    </ol>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-12">


                    <!-- About Me Box -->
                    <div class="card card-primary">
                        <div class="card-header">
                            <h3 class="card-title">Detailed Facility Type Information of @Model.Title</h3>
                        </div>
                        <!-- /.card-header -->
                        <div class="card-body">
                            <strong><i class="fas fa-info mr-1"></i> The Facility Type Information are: </strong>



                            <hr>

                            <strong><i class="fas fa-award mr-1"></i> Facility Type: <span class="tag tag-primary text-primary"> @Model.Title</span> </strong>

                            

                            <hr>

                            <strong>
                                <i class="fas fa-toggle-on mr-1"></i> Facility Active State:   <span class="tag tag-primary text-success">

                                    @if (@Model.IsActive)
                                    {
                                        <text>Active </text>
                                    }
                                    else
                                    {
                                        <text>Not Active </text>
                                    }



                                </span>
                            </strong>

                           

                            <hr>
                      
                            

                            <hr>

                        </div>
                        <!-- /.card-body -->
                    </div>
                    <!-- /.card -->
                </div>

            </div>
            <!-- /.row -->
        </div><!-- /.container-fluid -->
    </section>
    <!-- /.content -->
    <!-- /.content-wrapper -->
</section>

<section class="">

    <div>
        <a class="btn btn-success btn-rounded btn-sm my-0" asp-route-id="@Model.Id" asp-action="Edit"><i class="fa fa-pen"></i> Edit</a>
        <a class="btn btn-primary btn-rounded btn-sm my-0" asp-action="Index" asp-controller="SchoolCategories"><i class="fa fa-home"></i> Go Home</a>

    </div>
</section>